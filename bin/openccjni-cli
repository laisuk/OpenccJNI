#!/usr/bin/env bash
set -euo pipefail

JRE=java
# Pick the newest JAR from build/libs
JAR=$(ls -t openccjni-cli/build/libs/openccjni-cli-*.jar | head -n 1)
LIB="lib/*"

if [[ ! -f "$JAR" ]]; then
  echo "Error: no JAR found in openccjni-cli/build/libs/"
  exit 1
fi

"$JRE" -cp "$JAR:$LIB" openccjnicli.Main "$@"
